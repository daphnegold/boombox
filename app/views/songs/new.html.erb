<h2> Enter song details </h2>
<%= form_for @song do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <%= f.label :artist %>
  <%= f.text_field :artist %> <br>

  <%= f.label :comments %>
  <%= f.text_area :comments %> <br>

  <%= f.label :user %>
  <%= f.collection_select(:user_id, @users, :id, :name, prompt: "Select the user") %>
  <%= f.submit %>
<% end %>
