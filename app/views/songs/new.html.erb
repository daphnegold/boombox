<div class="small-image-container smaller-title-box">
  <%= image_tag("music_4.jpeg", class: "hero-image") %>
</div>

<div class="smaller-page-title-box">
  <h1 class="page-header">suggest a song</h1>
</div>

<div class="logout">
  <%= link_to "Cancel", "/songs", class: "logout-link" %>
</div>

<% if !@song.nil? %>
<ul>
  <% @song.errors.each do |column, message| %>
    <li>
      <% if column == :song_url %>
        <strong>Link</strong>
      <% else %>
        <strong><%= column.capitalize %></strong>
      <% end %>
     <%= message %>
    </li>
  <% end %>
</ul>
<% end %>

<div class="add-song-form-box">

<%= form_for @song, class:"add-song-form", url:({action: "#{@action}"}) do |f| %>
<table>
  <tr>
    <td>
      <%= f.label :name %>
    </td>
    <td class="text-field-table">
      <%= f.text_field :name, class:"text-field-text" %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :artist %>
    </td>
    <td class="text-field-table">
      <%= f.text_field :artist, class:"text-field-text" %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :song_url, "Youtube Link" %>
    </td>
    <td class="text-field-table">
      <%= f.text_field :song_url, class:"text-field-text" %> <br>
    </td>
  </tr>
</table>

  <%= f.submit "Suggest this song" %>
<% end %>

</div>
